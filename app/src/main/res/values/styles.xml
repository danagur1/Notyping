<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="my_text" >
        <item name="android:textColor">@color/p_blue</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:fontFamily">@font/calibari</item>
        <item name="android:textSize">60dp</item>
    </style>
    <style name="my_text.mid" >
        <item name="android:textSize">25dp</item>
    </style>
    <style name="my_text.mid.note_title" >
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="my_text.small" >
        <item name="android:textSize">20dp</item>
    </style>
    <style name="my_text.small.note_body" >
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="my_text.title" >
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>
    <style name="small_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:fontFamily">@font/calibari</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
    </style>



    <style name="text_shape">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/text_back</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="notes_col">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">105dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="general_layout" >
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="general_layout.linear" >
        <item name="android:background">@color/p_orange</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="button">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/p_blue</item>
        <item name="android:fontFamily">@font/calibari</item>
        <item name="android:backgroundTint">@color/p_yellow</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="small_button">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/p_blue</item>
        <item name="drawableTint">@color/p_blue</item>
        <item name="android:backgroundTint">@color/p_yellow</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="fab.add">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="srcCompat">@drawable/add</item>
    </style>
    <style name="fab.other">
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/p_orange</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.DayNight">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>



</resources>